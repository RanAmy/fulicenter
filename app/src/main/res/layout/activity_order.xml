<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <RelativeLayout
        android:id="@+id/layout_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/comment_head_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_order_name"
        android:layout_below="@id/layout_order_title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="收货人："
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/ed_order_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_order_phone"
        android:layout_below="@id/layout_order_name"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_order_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机号码："
                android:textSize="25sp"/>
            <EditText
                android:inputType="phone"
                android:id="@+id/ed_order_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_order_province"
        android:layout_below="@id/layout_order_phone"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_order_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="所在地区："
                android:textSize="25sp"/>

            <Spinner
                android:id="@+id/spin_order_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/area">
            </Spinner>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_order_street"
        android:layout_below="@id/layout_order_province"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_order_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="街道地址："
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/ed_order_street"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#36f" />-->
    <RelativeLayout
        android:id="@+id/layout_order"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_cart_buy"
            android:textColor="#d62d20"
            android:text="合计：￥0"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_order_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FF6C2C"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:text="提交订单"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </RelativeLayout>
</RelativeLayout>
